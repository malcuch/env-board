@page
@model IndexModel
@{
    ViewData["Title"] = "CC Env Insight";
}
<style>

    .env-tile {
        background-color: #f0f0f0;
        height: 100%;
    }

    .env-tile .card-header {
        color: white;
        background-color: #aaa;
    }

    .env-tile.failed .card-header {
        background-color: #c04242;
    }

        .env-tile.failed .card-header, 
        .env-tile.canceled .card-header {
            background-color: #c04242;
        }

        .env-tile.succeeded .card-header {
            background-color: #5caa5c;
        }

        .env-tile.succeededwithissues .card-header {
            background-color: #d8be4e;
        }


    .deployment.empty {
        color: gray;
    }


    .deployment .deployment-body {
        font-size: large;
    }

    .deployment .deployment-footer {
        color: gray;
        font-size: smaller;
    }
</style>

<div class="text-center">
    <div class="row">
        <div class="col p-3"></div>
    </div>
    <div class="row">
        <div class="col-sm">
            <partial name="EnvironmentTile" model="@Model.State.GetEnvironmentByName("DEV-1")" />
        </div>
        <div class="col-sm">
            <partial name="EnvironmentTile" model="@Model.State.GetEnvironmentByName("TEST-1")" />
        </div>
        <div class="col-sm">
            <partial name="EnvironmentTile" model="@Model.State.GetEnvironmentByName("UAT-1")" />
        </div>
        <div class="col-sm">
            <partial name="EnvironmentTile" model="@Model.State.GetEnvironmentByName("AUTOTEST-1")" />
        </div>
    </div>
    <div class="row">
        <div class="col p-3"></div>
    </div>
    <div class="row">
        <div class="col-sm">
            <partial name="EnvironmentTile" model="@Model.State.GetEnvironmentByName("DEV-2")" />
        </div>
        <div class="col-sm">
            <partial name="EnvironmentTile" model="@Model.State.GetEnvironmentByName("TEST-2")" />
        </div>
        <div class="col-sm">
            <partial name="EnvironmentTile" model="@Model.State.GetEnvironmentByName("UAT-2")" />
        </div>
        <div class="col-sm">
            <partial name="EnvironmentTile" model="@Model.State.GetEnvironmentByName("AUTOTEST-2")" />
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">

        setTimeout(function() {  window.location.reload(); }, 15 * 1000);

    </script>
    

